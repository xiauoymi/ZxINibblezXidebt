<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:text="Vault Balance"
        android:textSize="30dp"
        android:gravity="center_horizontal|center_vertical"
        android:layout_gravity="center_horizontal|center_vertical"
        android:textColor="@android:color/white" />

    <TextView  xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/fragment_header"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="$0.00"
        android:textColor="@android:color/white"
        android:textSize="45dp"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:background="@android:color/transparent" android:gravity="center_vertical|center_horizontal"/>

    <Button android:id="@+id/add_money_button" style="?android:textAppearanceSmall"
        android:layout_width="200dp" android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp" android:text="@string/action_add_money"
        android:textStyle="bold"
        android:textColor="#ffffffff"
        android:shadowRadius="3" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="10dp"/>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/main_wallet_content_container">


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <android.support.v4.widget.SwipeRefreshLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/wallet_swipe_container"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <ScrollView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:background="@android:color/white"
                    android:gravity="top">
                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:orientation="vertical"
                        android:gravity="top">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="Recent Activity"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:gravity="center_horizontal|center_vertical"
                            />

                        <LinearLayout
                            android:id="@+id/wallet_trxs"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="top">


                        </LinearLayout>

                    </LinearLayout>

                </ScrollView>
            </android.support.v4.widget.SwipeRefreshLayout>

        </RelativeLayout>
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/main_wallet_progress_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/progress_bar_bg"
            android:gravity="center_vertical|center_horizontal"
            android:visibility="gone">
            <include layout="@layout/progress_bar" android:id="@+id/main_wallet_progress" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>


