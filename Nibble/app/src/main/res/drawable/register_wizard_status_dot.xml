<?xml version="1.0" encoding="utf-8"?>
<layer-list>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:innerRadius="1dp"
            android:shape="ring"
            android:tint="@color/nibble_main"
            android:useLevel="false" android:thickness="20dp">


            <gradient
                android:startColor="@color/nibble_main"
                android:endColor="@color/transparent"
                android:type="radial"
                android:gradientRadius="15dp"/>

        </shape>

    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:innerRadius="5dp"
            android:shape="ring"
            android:tint="@color/nibble_main"
            android:useLevel="false" android:thickness="5dp">
            <solid android:color="@color/transparent" />

            <stroke
                android:width="2dp"
                android:color="@color/nibble_main" />

        </shape>

    </item>

</layer-list>

