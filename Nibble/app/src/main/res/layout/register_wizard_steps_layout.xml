<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="100dp">

    <ImageView
            android:id="@+id/animated_line"
            android:minHeight="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/register_wizard_status_line"/>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingRight="50dp">

            <ImageView
                    android:id="@+id/animated_dot_1"
                    android:minHeight="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/register_wizard_status_dot"/>

            <TextView
                    android:id="@+id/subtext_step_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Login Info"
                    android:textColor="@color/nibble_main"
                    android:textSize="15dp"
                    android:background="@color/transparent"/>

        </LinearLayout>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingRight="30dp">

            <ImageView
                    android:id="@+id/animated_dot_2"
                    android:minHeight="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/register_wizard_status_dot"/>


            <TextView
                    android:id="@+id/subtext_step_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Basic Info"
                    android:textColor="@color/nibble_main"
                    android:textSize="15dp"
                    android:background="@color/transparent"/>

        </LinearLayout>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/animated_dot_3"
                    android:minHeight="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/register_wizard_status_dot"/>

            <TextView
                    android:id="@+id/subtext_step_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Accounts"
                    android:textColor="@color/nibble_main"
                    android:textSize="15dp"
                    android:background="@color/transparent"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>