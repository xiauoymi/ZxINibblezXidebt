<RelativeLayout
    android:id="@+id/acct_item"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <!--<ImageView  xmlns:android="http://schemas.android.com/apk/res/android"-->
                <!--android:id="@+id/acct_type"-->
                <!--android:layout_width="50dp"-->
                <!--android:layout_height="50dp"-->
                <!--android:src="@drawable/ic_action_creditcard"-->
                <!--android:textColor="@color/transparent"-->
                <!--android:textSize="20dp"-->
                <!--android:textStyle="bold"-->
                <!--android:paddingRight="5dp"-->
                <!--android:textAppearance="@style/TextAppearance.AppCompat.Body1"-->
                <!--android:background="@android:color/transparent" android:gravity="left|center_vertical"/>-->

            <TextView  xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/acct_name"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="Account Name"
                android:textColor="@color/nibble_main"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginLeft="12dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:background="@android:color/transparent" android:gravity="left|center_vertical"/>

            <TextView  xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/acct_expiry"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="Expiry"
                android:textColor="@color/transparent"
                android:textSize="15dp"
                android:textStyle="normal"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:background="@android:color/transparent" android:gravity="center|center_vertical"/>


        </LinearLayout>


        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/transparent"
            android:paddingBottom="10dp"/>

    </LinearLayout>
</RelativeLayout>