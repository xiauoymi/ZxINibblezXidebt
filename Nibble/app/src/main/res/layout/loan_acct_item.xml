<RelativeLayout
    android:id="@+id/roundup_acct_item"
    android:layout_width="match_parent"
    android:layout_height="61dp"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/nibble_main_light45">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <!--<ImageView  xmlns:android="http://schemas.android.com/apk/res/android"-->
                <!--android:id="@+id/acct_type"-->
                <!--android:layout_width="50dp"-->
                <!--android:layout_height="50dp"-->
                <!--android:src="@drawable/ic_action_creditcard"-->
                <!--android:textColor="@color/transparent"-->
                <!--android:textSize="20dp"-->
                <!--android:textStyle="bold"-->
                <!--android:paddingRight="5dp"-->
                <!--android:textAppearance="@style/TextAppearance.AppCompat.Body1"-->
                <!--android:background="@android:color/transparent" android:gravity="left|center_vertical"/>-->
            <LinearLayout
                    android:layout_width="240dp"
                    android:layout_height="60dp"
                    android:orientation="vertical">

                <TextView  xmlns:android="http://schemas.android.com/apk/res/android"
                           android:id="@+id/inst_name"
                           android:layout_width="match_parent"
                           android:layout_height="30dp"
                           android:text="Institution Name"
                           android:textColor="@color/nibble_main_darker"
                           android:textSize="12dp"
                           android:textStyle="normal"
                           android:layout_marginLeft="12dp"
                           android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                           android:background="@android:color/transparent" android:gravity="left|center_vertical"/>

                <TextView  xmlns:android="http://schemas.android.com/apk/res/android"
                           android:id="@+id/acct_name"
                           android:layout_width="match_parent"
                           android:layout_height="30dp"
                           android:text="Institution Name"
                           android:textColor="@color/nibble_main_darker"
                           android:textSize="17dp"
                           android:textStyle="bold"
                           android:layout_marginLeft="12dp"
                           android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                           android:background="@color/transparent" android:gravity="left|center_vertical"/>

            </LinearLayout>
            <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="@color/nibble_main_light">

                <TextView  xmlns:android="http://schemas.android.com/apk/res/android"
                           android:id="@+id/acct_interest"
                           android:layout_width="match_parent"
                           android:layout_height="60dp"
                           android:text="0.00 %"
                           android:textColor="@color/nibble_main_darker"
                           android:textSize="15dp"
                           android:textStyle="bold"
                           android:layout_marginLeft="12dp"
                           android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                           android:background="@color/transparent" android:gravity="left|center_vertical"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:orientation="vertical"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:background="@color/nibble_main_dark">

                <TextView  xmlns:android="http://schemas.android.com/apk/res/android"
                           android:layout_width="fill_parent"
                           android:layout_height="30dp"
                           android:text="Pay off?"
                           android:textColor="@color/white"
                           android:textSize="8dp"
                           android:textStyle="bold"
                           android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                           android:background="@color/transparent" android:gravity="center_vertical|center_horizontal"/>

                <CheckBox android:id="@+id/use_for_payoff"
                      android:layout_width="wrap_content" android:layout_height="match_parent" android:clickable="true" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:orientation="horizontal">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/nibble_main_darker"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>