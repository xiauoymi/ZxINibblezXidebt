<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:cpv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:text="Weekly Snapshot"
        android:textSize="30dp"
        android:gravity="center_horizontal|center_vertical"
        android:layout_gravity="center_horizontal|center_vertical"
        android:textColor="@color/nibble_main" />


    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="vertical" android:gravity="center_horizontal">
        <at.grabner.circleprogress.CircleProgressView
                android:id="@+id/circleView"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:paddingBottom="10dp"
                cpv:cpv_barColor="@color/nibble_main_dark"
                cpv:cpv_barWidth="33dp"
                cpv:cpv_contourSize="0dp"
                cpv:cpv_autoTextSize="true"
                cpv:cpv_maxValue="100"
                cpv:cpv_rimColor="@color/nibble_main_error"
                cpv:cpv_rimWidth="33dp"
                cpv:cpv_seekMode="true"
                cpv:cpv_textColor="@color/nibble_main_light"
                cpv:cpv_unit="%"
                cpv:cpv_unitColor="@color/nibble_main_light"/>

        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                android:orientation="horizontal">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical" android:layout_weight="1">
                <TextView  xmlns:android="http://schemas.android.com/apk/res/android"
                           android:id="@+id/fragment_accumulated_amount_label"
                           android:layout_width="match_parent"
                           android:layout_height="20dp"
                           android:text="Accumulated"
                           android:textColor="@color/nibble_main_light"
                           android:textSize="15dp"
                           android:textStyle="bold"
                           android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                           android:background="@color/nibble_main_dark"
                           android:gravity="center_vertical|center_horizontal"/>

                <TextView  xmlns:android="http://schemas.android.com/apk/res/android"
                           android:id="@+id/fragment_accumulated_amount"
                           android:layout_width="match_parent"
                           android:layout_height="30dp"
                           android:text="$0.00"
                           android:textColor="@android:color/white"
                           android:textSize="25dp"
                           android:textStyle="bold"
                           android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                           android:background="@color/nibble_main_dark"
                           android:gravity="center_vertical|center_horizontal"/>

            </LinearLayout>


            <View android:layout_width="2dp" android:layout_height="match_parent"
                  android:background="@color/transparent" />

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical" android:layout_weight="1">
                <TextView  xmlns:android="http://schemas.android.com/apk/res/android"
                           android:id="@+id/fragment_target_amount_label"
                           android:layout_width="match_parent"
                           android:layout_height="20dp"
                           android:text="Target"
                           android:textColor="@color/nibble_main_light"
                           android:textSize="15dp"
                           android:textStyle="bold"
                           android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                           android:background="@color/nibble_main_dark"
                           android:gravity="center_vertical|center_horizontal"/>

                <TextView  xmlns:android="http://schemas.android.com/apk/res/android"
                           android:id="@+id/fragment_target_amount"
                           android:layout_width="match_parent"
                           android:layout_height="30dp"
                           android:text="$0.00"
                           android:textColor="@android:color/white"
                           android:textSize="25dp"
                           android:textStyle="bold"
                           android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                           android:background="@color/nibble_main_dark"
                           android:gravity="center_vertical|center_horizontal"/>

            </LinearLayout>

        </LinearLayout>

        <View android:layout_width="match_parent" android:layout_height="2dp"
              android:background="@color/transparent" />
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                      android:orientation="horizontal">

            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                          android:orientation="vertical" android:layout_weight="1">
                <TextView  xmlns:android="http://schemas.android.com/apk/res/android"
                           android:id="@+id/fragment_saved_amount_label"
                           android:layout_width="match_parent"
                           android:layout_height="20dp"
                           android:text="Saved"
                           android:textColor="@color/nibble_main_light"
                           android:textSize="15dp"
                           android:textStyle="bold"
                           android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                           android:background="@color/nibble_main_dark"
                           android:gravity="center_vertical|center_horizontal"/>

                <TextView  xmlns:android="http://schemas.android.com/apk/res/android"
                           android:id="@+id/fragment_saved_amount"
                           android:layout_width="match_parent"
                           android:layout_height="30dp"
                           android:text="$0.00"
                           android:textColor="@android:color/white"
                           android:textSize="25dp"
                           android:textStyle="bold"
                           android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                           android:background="@color/nibble_main_dark"
                           android:gravity="center_vertical|center_horizontal"/>

            </LinearLayout>


            <View android:layout_width="2dp" android:layout_height="match_parent"
                  android:background="@color/transparent" />

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical" android:layout_weight="1">
                <TextView  xmlns:android="http://schemas.android.com/apk/res/android"
                           android:id="@+id/fragment_contributed_amount_label"
                           android:layout_width="match_parent"
                           android:layout_height="20dp"
                           android:text="Contributed"
                           android:textColor="@color/nibble_main_light"
                           android:textSize="15dp"
                           android:textStyle="bold"
                           android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                           android:background="@color/nibble_main_dark"
                           android:gravity="center_vertical|center_horizontal"/>

                <TextView  xmlns:android="http://schemas.android.com/apk/res/android"
                           android:id="@+id/fragment_contributed_amount"
                           android:layout_width="match_parent"
                           android:layout_height="30dp"
                           android:text="$0.00"
                           android:textColor="@android:color/white"
                           android:textSize="25dp"
                           android:textStyle="bold"
                           android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                           android:background="@color/nibble_main_dark"
                           android:gravity="center_vertical|center_horizontal"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>



    <View
        android:layout_width="fill_parent"
        android:layout_height="10dp"/>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/main_wallet_content_container">


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
            <android.support.v4.widget.SwipeRefreshLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/wallet_swipe_container"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                <ScrollView
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical"
                        android:background="@android:color/white"
                        android:gravity="top">
                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:orientation="vertical"
                                  android:gravity="top">

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:text="Recent Roundups and Contributions"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:textColor="@color/nibble_main_dark"
                                android:gravity="center_horizontal|center_vertical"
                                />

                        <LinearLayout
                                android:id="@+id/wallet_trxs"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="top">


                        </LinearLayout>

                    </LinearLayout>

                </ScrollView>
            </android.support.v4.widget.SwipeRefreshLayout>

        </RelativeLayout>
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/main_wallet_progress_container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/progress_bar_bg"
                        android:gravity="center_vertical|center_horizontal"
                        android:visibility="gone">
            <include layout="@layout/progress_bar" android:id="@+id/main_wallet_progress" />
        </RelativeLayout>
    </RelativeLayout>




</LinearLayout>


